generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_EXTERNAL")
}

model User {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  password   String
  coins      Int          @default(0)
  fishCaught Int          @default(0)
  x          Float?       @default(250)
  y          Float?       @default(250)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  biggestFish BiggestFish[]
  items Items[]
}

model BiggestFish {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  fishName  String
  length    Float
  tier      String
  reward    Int
  caughtAt  DateTime @default(now())

  @@unique([userId, fishName])  // enforce one fish type per user
}

model Items {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  itemName  String
  quantity Int
  
  @@unique([userId, itemName])  // enforce one fish type per user
}